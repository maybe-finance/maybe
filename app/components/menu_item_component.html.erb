<% if variant == :divider %>
  <hr class="border-tertiary my-1">
<% else %>
  <div class="px-1">
    <%= wrapper do %>
      <% if icon %>
        <%= lucide_icon(icon, class: destructive? ? "text-destructive" : "fg-gray") %>
      <% end %>
      <%= tag.span(text, class: text_classes) %>
    <% end %>
  </div>
<% end %>
