<%# locals: (series:) %>
<% if series %>
  <div data-controller="line-chart" id="lineChart" class="w-full h-full" data-line-chart-series-value="<%= series[:series_data].to_json %>"></div>
<% else %>
  <div class="w-full h-full flex items-center justify-center">
    <p class="text-gray-500">No data available for the selected period.</p>
  </div>
<% end %>