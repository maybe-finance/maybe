<div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow">
  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">Financial Assistant</h3>
    <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Ask anything about your finances</p>
    
    <div data-controller="ai-query" class="space-y-4">
      <%= form_with url: ai_queries_path, method: :post, class: "space-y-4", 
                    data: { ai_query_target: "form", action: "submit->ai-query#query" } do |f| %>
        
        <div class="relative">
          <%= f.text_field :query, 
                          placeholder: "E.g., 'What is my net worth?' or 'How much did I spend on groceries last month?'", 
                          class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg pr-10 focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:text-white", 
                          data: { ai_query_target: "input" } %>
          
          <button type="submit" 
                  class="absolute inset-y-0 right-0 flex items-center px-3 text-indigo-600 dark:text-indigo-400"
                  data-ai-query-target="submit">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
          
          <div data-ai-query-target="spinner" class="absolute inset-y-0 right-0 flex items-center px-3 hidden">
            <svg class="animate-spin h-5 w-5 text-indigo-600 dark:text-indigo-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </div>
        </div>
      <% end %>
      
      <div class="p-4 bg-gray-50 dark:bg-gray-900 rounded-lg">
        <p data-ai-query-target="output" class="text-gray-700 dark:text-gray-300 whitespace-pre-wrap"></p>
      </div>
    </div>
  </div>
</div> 