<%# locals: (import:) %>

<%= styled_form_with model: @import, url: import_configuration_path(@import), scope: :import, method: :patch, class: "space-y-2" do |form| %>
  <%= form.select :entity_type_col_label, import.csv_headers, { include_blank: "Select column", label: "Entity Type" } %>
  <%= form.select :name_col_label, import.csv_headers, { include_blank: "Select column", label: "Name (optional)" } %>
  <%= form.select :amount_col_label, import.csv_headers, { include_blank: "Select column", label: "Balance" } %>
  <%= form.select :currency_col_label, import.csv_headers, { include_blank: "Select column", label: "Currency" } %>

  <%= form.submit "Apply configuration", class: "w-full btn btn--primary", disabled: import.complete? %>
<% end %>
